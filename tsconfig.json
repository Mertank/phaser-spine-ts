{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "bin/",
		"sourceMap": true,
		"plugins": [
			{
				"name": "typescript-tslint-plugin"
			}
		]
	},
	"include": [
		"node_modules/phaser-ce/typescript/phaser.comments.d.ts",
		"spine-runtimes/spine-ts/build/spine-core.d.ts",
		"src/**/*.ts",
		"example/**/*.ts",
		"example/SpineGame.ts"
	]
}